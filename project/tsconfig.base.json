{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2020", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@project/config-comment": ["libs/config-comment/src/index.ts"],
      "@project/config-notify": ["libs/config/config-notify/src/index.ts"],
      "@project/config-post": ["libs/config/config-post/src/index.ts"],
      "@project/config-uploader": ["libs/config/config-uploader/src/index.ts"],
      "@project/config-users": ["libs/config/config-users/src/index.ts"],
      "@project/exception-filter": ["libs/exception-filter/src/index.ts"],
      "@project/models-post": ["libs/models/models-post/src/index.ts"],
      "@project/shared-pipes": ["libs/shared-pipes/src/index.ts"],
      "@project/shared-types": ["libs/shared-types/src/index.ts"],
      "@project/util-core": ["libs/util/util-core/src/index.ts"],
      "@project/util/util-types": ["libs/util/util-types/src/index.ts"],
      "@project/validation-message": ["libs/validation-message/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
